PKG_CFLAGS = -Icorpus/src
PKG_LIBS = -L. -lccorpus

LIBCORPUS = corpus/lib/strntod_c.o corpus/lib/strntoimax.o \
	corpus/src/array.o corpus/src/data.o corpus/src/datatype.o \
	corpus/src/error.o corpus/src/filebuf.o corpus/src/render.o \
	corpus/src/sentscan.o corpus/src/symtab.o corpus/src/table.o \
	corpus/src/text.o corpus/src/token.o corpus/src/unicode.o \
	corpus/src/wordscan.o corpus/src/xalloc.o

$(SHLIB): libccorpus.a

libccorpus.a: $(LIBCORPUS)
	$(AR) rcs libccorpus.a $(LIBCORPUS)

clean:
	rm -f $(LIBCORPUS) $(SHLIB) $(OBJECTS) libccorpus.a
